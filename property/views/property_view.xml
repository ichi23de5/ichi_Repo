<openerp>
    <data>

	<!-- base structure of Property form view -->
	<record model="ir.ui.view" id="property_view_form">
	    <field name="name">property.view.form</field>
	    <field name="model">property</field>
	    <field name="type">form</field>
	    <field name="arch" type="xml">
	        <form string="PROPERTY">
		<!--   
                    <header>
			
		        <button string="Applicate" type="object" name="applicate_sim" class="oe_highlight"/>
			<button string="Arrival" type="object" name="arrival_sim"/>
		    </header>
                -->
                    <sheet>
		        <div class="oe_title">
                        <!--
                            <label class="oe_edit_only" for="sim_number" string="SIM number"/>
                       --> 
                            <h1><field name="property_name"/></h1>
                        </div>
                        <div>
                                <field name="zip"/>
                                <field name="property_addr"/>
                                <field name="phone"/>
                        </div>  
                        <group>
                            <group>
		    	        <field name="partner_id"/>
                            </group>
                            <group>
                                <field name="rep_name_id"/>
                            </group>
                        </group>
                                <field name="note"/>
		    </sheet>
                </form>
	    </field>
	</record>


        <!-- base structure of sim tree view -->
        <record id="property_view_tree" model="ir.ui.view"> 
            <field name="name">property.view.tree</field> 
            <field name="model">property</field> 
            <field name="arch" type="xml"> 
                <tree string="Property Information"> 
                    <field name="property_name"/> 
                    <field name="property_addr"/> 
                    <field name="partner_id"/> 
                    <field name="rep_name_id"/>  
                </tree> 
            </field> 
        </record> 



	<!--The action -->
        <record model="ir.actions.act_window" id="property_view_action">
            <field name="name">Property Info</field>
            <field name="res_model">property</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name='view_id' ref='property_view_form'/>
        </record>

        <!-- top level menu: no parent -->
        <menuitem id="pro_main_button_menu" name="Property"/>
        <menuitem id="pro_button_menu" name="Property"
                  parent="pro_main_button_menu"/>
        <menuitem id="pro_menu_detail"
                action="property_view_action" parent="pro_button_menu"
                sequence="20"/>
    </data>
</openerp>
