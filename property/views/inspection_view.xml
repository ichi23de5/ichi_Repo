<openerp>
    <data>
	<!-- Model : property.inspection -->
	<record model="ir.ui.view" id="inspection_view_form">
	    <field name="name">inspection.view.form</field>
	    <field name="model">property.inspection</field>
	    <field name="type">form</field>
	    <field name="arch" type="xml">
	        <form string="Inspection">
                    <sheet>
                        <group>
                            <group>
		    	        <field name="date"/>
                                <field name="inspector_id" widget="selection"/>
                                <field name="act_type"/>
                                <!-- <field name="state"/> -->
                            </group>
                            <group>
                                <field name="product_memo" attrs="{'invisible': [('act_type', '==', 'mail')]}"/>
                            </group>
                        </group>
                        <div>
                            <field name="inspection_note" placeholder="Note" attrs="{'invisible': [('act_type', '==', 'mail')]}"/>
                        </div>
                        <notebook>
                            <page string="request" attrs="{'invisible': [('act_type', '==', 'mail')]}">
                                <group>
                                    <group>
                                        <field name="date"/>
                                        <field name="responder_id"/>
                                    </group>
                                    <group>
                                        <field name="requester_id"/>
                                        <field name="requester_rep_id"/>
                                    </group>
                                </group>
                                <div>
                                    <field name="request_note"/>
                                </div>
                            </page>
                            <page string="Mail notification" attrs="{'invisible': [('act_type', '!=', 'mail')]}">
                                <group>
                                    <field name="symptom"/>
                                    <field name="mail_comment"/>
                                </group>
                            </page>
                        </notebook>
		    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
	    </field>
	</record>
        <record id="inspection_view_tree" model="ir.ui.view"> 
            <field name="name">inspection.view.tree</field> 
            <field name="model">property.inspection</field> 
            <field name="arch" type="xml"> 
                <tree string="Inspection List"> 
                    <field name="property_ins_id" invisible="1"/>
                    <field name="date"/> 
                    <field name="inspector_id"/> 
                    <field name="act_type"/>  
                    <!-- <field name="state"/> -->
                </tree> 
            </field> 
        </record> 



        <!--The action -->
        <record model="ir.actions.act_window" id="buttons_inspection_action">
            <field name="name">Inspection</field>
            <field name="res_model">property.inspection</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name='view_id' ref='inspection_view_tree'/>
        </record>

        <!-- top level menu: no parent -->
        <menuitem id="button_menu_inspection" name="Inspection" 
                  parent="main_button_menu"
                  sequence="9"/> 

        <menuitem id="inspection"
                  action="buttons_inspection_action"
                  parent="button_menu_inspection"
                  sequence="10"/>


    </data>
</openerp>
