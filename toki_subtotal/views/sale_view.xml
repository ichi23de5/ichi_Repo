<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_order_from_subtotal" model="ir.ui.view">
			<field name="name">sale.order.form.subtotal</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='validity_date']" position="after">
                                        <field name="product_subtotal"/>
                                        <field name="service_subtotal"/>
                                        <field name="discount_subtotal"/>
                                        <field name="other_subtotal"/>
                                </xpath>
	         	</field>
		</record>
	</data>
</openerp> 
