<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="cloud_view_form">
	    <field name="name">cloud.view.form</field>
	    <field name="model">cloud</field>
	    <field name="type">form</field>
	    <field name="arch" type="xml">
	        <form string="TKCLOUD">
                    <header>
                        <button string="Start" type="object" name="start" states="check,stop"/>
                        <button string="Ringishinsei" type="object" name="request" states="draft,sent"/>
                        <field name="state" widget="statusbar" statusbar_visible="check,work,stop,limit,finish"/>
                    </header>
                    <sheet>
<!--		        <div class="oe_title">
                            <label string="Property Name"/>
                            <h1><field name="property_name" placeholder="Name"/></h1>
                        </div>-->
                        <group>
                            <group>
                                <field name="date_cloud"/>
		    	        <field name="order_id"/>
                                <!--<field name="property_add"/>-->
                                <field name="end_user" placeholder="end user name"/>
                                <!-- <field name="partner_id"/>-->
                                <field name="rep_partner_name"/>
                                <field name="user_id"/>
                                <!--<field name="assistant_id"/>-->
                            </group>
                            <group>
                                <field name="sim_id"/>
                                <field name="plan"/>
                                <field name="rate_plan"/>
                            </group>
                        </group>
                        <notebook> 
                            <page string="Quotation list">
                                <!--<field name="quotation_ids"/>-->
                                <group string="DVR">
                                    <field name="dvr1"/>
                                    <field name="dvr2"/>
                                    <field name="dvr3"/>
                                    <field name="dvr4"/>
                                </group>
                            </page>
                            <page string="Contract">
                                <group>
                                    <group string="Infomation">
                                        <field name="contractor_number"/>
                                        <field name="contractor_pass"/>
                                        <field name="application_date"/>
                                    </group>
                                    <group string="Contraction Date">
                                        <field name="approval_date"/>
                                        <field name="construction_date"/>
                                        <field name="expiration_date" placeholder="auto"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Change and Cancel"> 
                                <group>
                                    <group name="change" string="Change"> 
                                        <field name="changeapp_date"/>
                                    </group> 
                                    <group name="cancel" string="Cancel">
                                        <field name="cancelapp_date"/>
                                        <field name="cancel_date"/>
                                    </group>
                                </group>
                            </page> 
                        </notebook> 
		    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
	    </field>
	</record>

        <record model="ir.ui.view" id="cloud_view_tree">
            <field name="name">cloud.view.tree</field>
            <field name="model">cloud</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="TKCLOUD">
                    <field name="state"/>
                </tree>
            </field>
        </record>



        <!-- The Action -->
        <record model="ir.actions.act_window" id="cloud_view_action">
            <field name="name">TKCLOUD management</field>
            <field name="res_model">cloud</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name='view_id' ref='cloud_view_form'/>
        </record>

        <!-- Side Menu Sales -->
        <menuitem id="button_menu_cloud" name="CLOUD" 
                  parent="base.menu_sales"
                  sequence="20"/>
        <menuitem id="cloud" action="cloud_view_action" 
                  parent="button_menu_cloud"/>



    </data>
</openerp>
