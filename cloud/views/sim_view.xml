<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>

	<!-- Model: cloud.sim -->
	<record model="ir.ui.view" id="cloud_sim_view_form">
	    <field name="name">cloud.sim.view.form</field>
	    <field name="model">cloud.sim</field>
	    <field name="type">form</field>
	    <field name="arch" type="xml">
	        <form string="SIM">
                    <sheet>
		        <div class="oe_title" style="float:left;">
                            <label class="oe_edit_only" string="Kotei IP address"/>
                            <h2><field name="ip_address"/></h2>
                        </div>
                        <group>
                            <group>
                                <field name="sim_id" widget="selection"/>
		    	        <field name="date_sim"/>
                                <field name="reception_date"/>
                                <field name="phone"/>
                                <field name="iccid_number"/>
                            </group>
                            <group>
                                <field name="arrival_date"/>
                                <field name="user_number"/>
                                <field name="charge_date"/>
                                <field name="expiration_date"/>
                                <field name="min_month" invisible="1"/>
                            </group>
                        </group>
		    </sheet>
                    <div class="oe_chatter"> 
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/> 
                        <field name="message_ids" widget="mail_thread"/> 
                    </div>
               </form>
	    </field>
	</record>
        <record id="cloud_sim_view_tree" model="ir.ui.view"> 
            <field name="name">cloud.sim.view.tree</field> 
            <field name="model">cloud.sim</field> 
            <field name="arch" type="xml"> 
                <tree string="SIM List"> 
                    <field name="ip_address"/>
                    <field name="user_number"/>
                    <field name="sim_id"/> 
                    <field name="date_sim"/> 
                    <field name="charge_date"/>  
                </tree> 
            </field> 
        </record> 



        <!-- Model: cloud.sim.type -->
        <record id="cloud_sim_type_view_tree" model="ir.ui.view">
            <field name="name">cloud.sim.type.view.tree</field>
            <field name="model">cloud.sim.type</field>
            <field name="arch" type="xml">
                <tree string="SIM Type">
                    <field name="name"/>
                    <field name="max_storage"/>
                    <field name="business_number"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="cloud_sim_type_view_form">
            <field name="name">cloud.sim.type.view.form</field>
            <field name="model">cloud.sim.type</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="SIM Type">
                    <sheet>
                        <div class="oe_title" style="float:left;">
                            <label class="oe_edit_only" string="SIM ID"/>
                            <h2><field name="name"/></h2>
                        </div>
                        <group>
                            <group>
                                <field name="supplier_id"/>
                                <field name="max_storage"/>
                                <field name="business_number"/>
                                <field name="datermination"/>
                                <field name="min_use_time"/>
                            </group>
                            <group>
                                <field name="size_code"/>
                                <field name="deta_code"/>
                                <field name="pay_per_up"/>
                                <field name="pay_per_down"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Basic">
                                <group>
                                    <group string="Initial Cost">
                                        <field name="basic_charge"/>
                                        <field name="admin_charge"/>
                                        <field name="opening_sim"/>
                                        <field name="opening_sim_up"/>
                                        <field name="delivery_sim"/>
                                        <field name="universal_service"/>
                                        <field name="ip_month"/>
                                        <field name="date_model"/>
                                    </group>
                                    <group string="Commission">
                                        <field name="unreturned_sim"/>
                                        <field name="reissure_sim"/>
                                        <field name="redelivery_sim"/>
                                        <field name="stop_sim"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Change and Cancel">
                                <group>
                                    <group string="Change">
                                        <field name="change_plan"/>
                                        <field name="change_size"/>
                                    </group>
                                    <group string="Charge">
                                        <field name="charge100"/>
                                        <field name="charge500"/>
                                        <field name="charge1000"/>
                                    </group>
                                </group>
                                <group> 
                                    <group string="Cancel">
                                        <field name="cancel_charge"/>
                                        <field name="cancel_charge_first"/>
                                        <field name="cancel_charge_year"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>





	<!--The action -->
        <record model="ir.actions.act_window" id="buttons_cloud_sim_action">
            <field name="name">SIM list</field>
            <field name="res_model">cloud.sim</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name='view_id' ref='cloud_sim_view_tree'/>
        </record>
       <record model="ir.actions.act_window" id="buttons_cloud_sim_type_action">
            <field name="name">SIM type</field>
            <field name="res_model">cloud.sim.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name='view_id' ref='cloud_sim_type_view_form'/>
        </record>

        <!-- top level menu: no parent -->
        <menuitem id="cloud_sim"
                  action="buttons_cloud_sim_action"
                  parent="button_menu_cloud"/>
        <menuitem id="cloud_sim_type"
                  action="buttons_cloud_sim_type_action"
                  groups="cloud.group_operator"
                  parent="button_menu_cloud"/>

    </data>
</openerp>
