<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!--Gets triggered by the record with id 'access_rights_admin_action'. Which in turn is triggered on click. -->
        <!--Admin form view -->
        <record model="ir.ui.view" id="cloud_view_admin_form">
	    <field name="name">cloud.view.form</field>
	    <field name="model">cloud</field>
	    <field name="type">form</field>
	    <field name="arch" type="xml">
	        <form string="TKCLOUD">
                    <sheet>
		        <div class="oe_title">
                            <label string="Property Name"/>
                            <h1><field name="property_name" placeholder="Name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="date_cloud"/>
		    	        <field name="name"/>
                                <field name="property_name"/>
                                <field name="property_add"/>
                                <field name="end_user"/>
                                <field name="name_id"/>
                                <field name="rep_name_id"/>
                                <field name="user_id"/>
                                <field name="ass_user_id"/>
                                <field name="plan"/>
                                <field name="rate_plan"/>
                            </group>
                            <group>
                                <field name="sim_id"/>
                                <field name="contractor_number"/>
                                <field name="contractor_pass"/>
                                <field name="application_date"/>
                                <field name="approval_date"/>
                                <field name="construction_date"/>
                                <field name="expiration_date" placeholder="auto"/>
                                <field name="changeapp_date"/>
                                <field name="cancelapp_date"/>
                                <field name="cancel_date"/>
                            </group>
                        </group>
		    </sheet>
                </form>
	    </field>
	</record>

        <!-- Admin tree view -->
        <!-- Originally it did not make it -->

        <!-- Admin action window -->
        <record model="ir.actions.act_window" id="buttons_cloud_admin_action">
            <field name="name">Entry new service</field>
            <field name="res_model">cloud</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name='view_id' ref='cloud_view_admin_form'/>
        </record>



        <!-- Not stipulated form view -->
        <record model="ir.ui.view" id="cloud_contractor_view_form">
            <field name="name">cloud.contractor.view.form</field>
            <field name="model">cloud_contractor</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Contractor pass random create">
                    <header>
                   <!-- <button string="Generate name" type="object" name="generate_record_name" class="oe_highlight"/> -->
                        <button string="Generate password" type="object" name="generate_record_password"/>
                        <button string="Clear data" type="object" name="clear_record_data"/>
                    </header>
                    <group>
                            <field name="contractor_number"/>
                            <field name="contractor_pass"/>
                    </group>
                </form>
            </field>
        </record>


    <!--Gets triggered by the record with id 'access_rights_user_action'. Which in turn is triggered on click. -->
    <!-- User form view -->
        <record model="ir.ui.view" id="cloud_view_user_form">
            <field name="name">cloud.view.form</field>
            <field name="model">cloud</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="TKCLOUD">
                    <sheet>
                        <div class="oe_title">
                            <label string="Property Name"/>
                            <h1><field name="property_name" placeholder="Name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="date_cloud"/>
                                <field name="name"/>
                                <field name="property_name"/>
                                <field name="property_add"/>
                                <field name="end_user"/>
                                <field name="name_id"/>
                                <field name="rep_name_id"/>
                                <field name="user_id"/>
                                <field name="ass_user_id"/>
                                <field name="plan"/>
                                <field name="rate_plan"/>
                            </group>
                            <group>
                                <field name="sim_id"/>
                                <field name="contractor_number"/>
                                <field name="contractor_pass"/>
                                <field name="application_date"/>
                                <field name="approval_date"/>
                                <field name="construction_date"/>
                                <field name="expiration_date" placeholder="auto"/>
                                <field name="changeapp_date"/>
                                <!-- <field name="cancelapp_date"/>
                                <field name="cancel_date"/> -->
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- User action window -->
        <record model="ir.actions.act_window" id="buttons_cloud_user_action">
            <field name="name">Entry new service</field>
            <field name="res_model">cloud</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name='view_id' ref='cloud_view_user_form'/>
        </record>

        <!-- Not stipulated action window -->
        <record model="ir.actions.act_window" id="buttons_cloud_contractor_action">
            <field name="name">Create random pass</field>
            <field name="res_model">cloud_contractor</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name='view_id' ref='cloud_contractor_view_form'/>
        </record>



        <!-- top level menu: no parent -->
        <menuitem id="main_button_menu" name="TKCLOUD"/>
        <menuitem id="button_menu" name="TK management" parent="main_button_menu"/>
        <!-- Add the security groups here to allow only access for specific user groups! -->
        <menuitem id="menu_detail_admin_logging" action="buttons_cloud_admin_action" parent="button_menu"
                  groups="cloud.group_manager"/>
        <menuitem id="menu_detail_user_logging" action="buttons_cloud_user_action" parent="button_menu"
                  groups="cloud.group_user"/>
        <menuitem id="menu_detail_logging2"
                action="buttons_cloud_contractor_action" parent="button_menu"/>
    



    </data>
</odoo>





