<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="layout_subtotal_template_add">
            <t t-if="'subtotal' in p['category'] and p['category'].subtotal is True">
                <tr class="text-right">
                    <td colspan="6">
                        <b><t t-esc="p['category'].name"/>Subtotal:</b>
                        <span t-esc="p['subtotal']" t-esc-options='{"widget": "monetary", "display_currency": "doc.currency_id"}'/>
                    </td>
                </tr>
            </t>
        </template>


        <template id="report_sale_layout_add" inherit_id="toki_report.report_sale_order_toki_template">
            <xpath expr="//table/tbody[@class='sale_tbody']" position="replace">
                <t t-foreach="doc.sale_layout_lines(order_id = doc.id)" t-as="p">

                    <!-- Lines associated -->
                    <t t-foreach="p['lines']" t-as="l">
                        <tr>
                            <td t-if="doc.partner_id.quotation_template.maker_flag">
                                <span t-field="l.maker"/>
                            </td>
                            <td>
                                <span t-field="l.product_id.description_sale"/>
                                <span t-if="l.product_id.default_code">
                                    <span t-if="doc.partner_id.quotation_template.code_flag">(<span t-field="l.product_id.name"/>)</span>
                                    <span t-if="doc.partner_id.quotation_template.code_flag == False">(<span t-field="l.product_id.default_code"/>)</span>
                                </span>
                            </td>
                            <td class="text-right">
                                <span t-field="l.product_uom_qty"/>
                                <span groups="product.group_uom" t-field="l.product_uom"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.open_price"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.price_unit"/>
                            </td>
                            <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                <span t-field="l.discount"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.price_subtotal"
                                    t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                    </t>

                    <!-- Subtotal -->
                    <t t-call="toki_report.layout_subtotal_template_add"/>
                </t>
            </xpath>
       </template>
    </data>
</openerp>
