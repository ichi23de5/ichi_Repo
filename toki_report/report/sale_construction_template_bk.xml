<?xml version="1.0"?>
<t t-name="report_sale_construction">
    <div class="page">
        <div class="row">
            <div class="col-xs-4 text-left">
                <h2><b>KojiShiyosyo</b></h2>
            </div>
            <div class="col-xs-3  col-xs-offset-5 text-right" style="margin-top:5px;">
                <b><div t-field="doc.name"/></b>
                <p><span t-field="doc.date_order" t-field-options='{"format": "yyyy"}'/>Nen<span t-field="doc.date_order" t-field-options='{"format": "MM"}'/>Tsuki<span t-field="doc.date_order" t-field-options='{"format": "dd"}'/>Nichi</p>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-7">
                <table>
                    <tr style="border-bottom: 1px solid black;">
                        <td style="font-size:17px"><b>Name:</b> 
                            <span t-field="doc.property_id"/>
                        </td>
                    </tr>
                    <tr style="border-bottom: 1px solid black;">
                        <td style="font-size:15px"><b>Address:</b>
                            <span t-field="doc.property_id.address"/>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col-xs-5 text-right">  
                <div class="row">
                    <div class="col-xs-3"/>
                    <span class="col-xs-5"><b>Eigyotantou:</b></span>
                    <span class="col-xs-4" t-field="doc.user_id"/>
                </div>
                <div class="row">
                    <div class="col-xs-8"/>
                    <span class="col-xs-4" t-field="doc.assistant_id"/>
                </div>
            </div>
        </div>
        <div class="row text-center">
            <h6> * * * </h6>
        </div>
        <div class="row">
            <div class="col-xs-4">
            </div>
            <div class="col-xs-4">
            </div>
            <div class="col-xs-4">
            </div>
        </div>
        <div class="row">
            <table border="1">
                <tr>
                    <td t-field="doc.construction_title"/>
                </tr>
            </table>
            <div class="col-xs-4">
<!--
                <table class="table table-condensed">
                    <tbody class="sale_tbody">
                        <t t-foreach="doc.order_line" t-as="l">
                        </t>
                    </tbody>
                </table>
-->
            </div>

            <div class="col-xs-4">
                <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>
                <table class="table table-condensed">
                    <tbody class="sale_tbody">
                        <t t-foreach="doc.order_line" t-as="l">
                            <tr t-if="l.product_uom_qty">
                                <td>
                                   <span t-field="l.product_id.description_sale"/> (<span t-field="l.product_id.default_code"/>)
                                </td>
                                <td class="text-right">
                                    <span t-field="l.product_uom_qty"/>
                                    <span groups="product.group_uom" t-field="l.product_uom"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</t>
