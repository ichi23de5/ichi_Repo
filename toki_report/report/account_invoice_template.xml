<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template t-name="toki_report.report_account_invoice_template">
            <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})"/>
            <t t-call="toki_report.report_account_invoice_header"/>
            <div class="page">
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <div class="row">
                    <p style="font-size:18px">KAKINOTORIGOSEIKYUMOUSHIAGEMASU.</p>
                    <t t-set="display_discount" t-value="any([l.discount for l in doc.invoice_line_ids])"/>
                    <table class="table table-condensed">
                        <thead>
                            <tr style="background-color: #e0e0e0;">
                                <th/>
                                <th/>
                                <th class="text-right">SURYO</th>
                                <th class="text-right">TANKA</th>
                                <th class="text-right">KINGAKU</th>
                            </tr>
                       </thead>
                       <tbody class="sale_tbody">
                            <t t-foreach="doc.invoice_line_ids" t-as="l">
                                <tr>
                                    <td class="text-left">
                                        <span t-field="l.completion_date" t-field-options="{&quot;format&quot;: &quot;M&quot;}"/>/
                                        <span t-field="l.completion_date" t-field-options="{&quot;format&quot;: &quot;dd&quot;}"/>
                                    </td>
                                    <td class="text-left">
                                        <span t-field="l.product_id.description_sale"/>
                                        <span t-if="l.product_id.default_code">
                                            <span t-if="doc.partner_id.quotation_template.code_flag">
                                                (<span t-field="l.product_id.name"/>)
                                            </span>
                                            <span t-if="doc.partner_id.quotation_template.code_flag == False">
                                                (<span t-field="l.product_id.default_code"/>)
                                            </span>
                                        </span>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.quantity"/>
                                        <span groups="product.group_uom" t-field="l.uom_id"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.price_unit"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.price_subtotal" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;doc.pricelist_id.currency_id&quot;}"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <!-- GOUKEIKINGAKU -->
                    <div class="row" name="total">
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed">
                                <tr class="border-black">
                                    <td><strong>UNTAXEDTOTAL</strong></td>
                                    <td class="text-right">
                                        <span t-field="doc.amount_untaxed" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;doc.pricelist_id.currency_id&quot;}"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>TAX(8%)</td>
                                    <td class="text-right">
                                        <span t-field="doc.amount_tax" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;doc.pricelist_id.currency_id&quot;}"/>
                                    </td>
                                </tr>
                                <tr class="border-black" style="font-size:18px">
                                    <td><strong>TOTAL</strong></td>
                                    <td class="text-right">
                                        <span t-field="doc.amount_total" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;doc.pricelist_id.currency_id&quot;}"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </div>
        </template>

        <template t-name="toki_report.report_account_invoice">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="toki_report.report_account_invoice_template" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>

    </data>
</openerp>

