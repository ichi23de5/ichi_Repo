<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_purchase_report_add_form">
            <field name="name">view.purchase.report.add.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="order_id" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_order_outsourcing_form">
            <field name="name">sale.order.form.outside</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button"
                            type="object"
                            name="act_out"
                            icon="fa-wrench" 
                            attrs="{'invisible': [('construction_type', '=', 'toki')]}">
                        <field name="outsource_count" widget="statinfo" string="OutSource"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
