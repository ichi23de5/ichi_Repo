<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <record id="view_account_invoice_form_add" model="ir.ui.view">
            <field name="name">account.invoice.form.add</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="property_name"/>
                </xpath>
                <xpath expr="//field[@name='date_due']" position="after">
                    <field name="completion_date"/>
                </xpath>
                <xpath expr="//field[@name='team_id']" position="attributes">
                    <attribute name="invisible">"1"</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_account_invoice_tree_add" model="ir.ui.view">
            <field name="name">account.invoice.tree.add</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="property_name"/>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="completion_date"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_account_act_type_form">
            <field name="name">view.account.act.type.form</field>
            <field name="model">account.act.type</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <group>
                    <field name="type_id"/>
                </group>
                <group>
                    <group>
                        <field name="category"/>
                    </group>
                    <group>
                    </group>
                </group>
            </field>
        </record>


        <record id="view_sale_order_form_add2" model="ir.ui.view">
            <field name="name">sale.order.form.add2</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="replace"/>
                <xpath expr="//field[@name='fiscal_position_id']" position="replace"/>
                <xpath expr="//group[@name='sale_pay']" position="attributes">
                    <attribute name="invisible">"1"</attribute>
                </xpath> 
                <notebook>
                    <page string="Invoice">
                        <group>
                            <group string="Summary">
                                <field name="act_type"/>
                                <field name="purchase_number"/>
                                <field name="completion_date"/>
                            </group>
                            <group string="Payment">
                                <field name="payment_term_id"/>
                                <field name="fiscal_position_id"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>


    </data>
</openerp>
