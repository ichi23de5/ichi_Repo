<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template t-name="report_sale_order_hls_template">
            <t t-call="toki_report.report_sale_order_template_header"/>
            <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})"/>
            <div class="page">
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <!-- Is there a discount on at least one line? -->
                <div class="row">
                    <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>
                    <table class="table table-condensed">
                        <thead>
                            <tr style="background-color: #e0e0e0;">
                                <th>TEKIYO</th>
                                <th class="text-right">SURYO</th>
                                <th class="text-right">TEIKA</th>
                                <th class="text-right">TANKA</th>
                                <th class="text-right">KINGAKU</th>
                            </tr>
                       </thead>
                       <!-- order_line : Flat-rate plan has no category -->
                       <tbody class="sale_tbody">
                           <t t-foreach="doc.sale_layout_lines(order_id = doc.id)" t-as="p">
                                <t t-foreach="p['lines']" t-as="l">
                                    <tr>
                                        <td>
                                            <span t-field="l.description_sale"/>
                                            <span t-if="l.product_id.default_code"> (<span t-field="l.product_id.default_code"/>)</span>
                                        </td>
                                        <td class="text-right">
                                            <span t-if="l.product_id.default_code">
                                                <span t-field="l.product_uom_qty"/>
                                                <span groups="product.group_uom" t-field="l.product_uom"/>
                                            </span>
                                            <span t-if="not l.product_id.default_code">ISSHIKI</span>
                                        </td>
                                        <td class="text-right">
                                            <t t-if="not l.product_id.open_price_type or l.product_id.open_price_type == 'open'"><span t-field="l.open_price"/></t>
                                            <t t-if="l.product_id.open_price_type == 'value'"><span t-field="l.chr_open_price"/></t>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.price_unit"/>
                                        </td>
                                        <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                            <span t-field="l.discount"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.price_subtotal"
                                                      t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                       </tbody>
                    </table>
                </div>
            </div>
        </template>

        <template t-name="toki_report_plan.report_sale_order_hls">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="toki_report_plan.report_sale_order_hls_template" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>

    </data>
</openerp>

