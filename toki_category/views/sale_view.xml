<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_sale_order_form_add_subtotal" model="ir.ui.view">
            <field name="name">sale.order.form.add.subtotal</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="product_subtotal"/>
                    <field name="service_subtotal"/>
                    <field name="set_subtotal"/>
                    <field name="other_subtotal"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
