<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_product_category_form_add" model="ir.ui.view">
            <field name="name">product.category.form.video</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="sub_category"/>
                </xpath>
            </field>
        </record>
        <record id="view_product_category_list_add" model="ir.ui.view">
            <field name="name">product.category.list.video</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_list_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='complete_name']" position="after">
                    <field name="sub_category"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>

