<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template t-name="report_tec.report_sale_order_tec_header">
            <div class="header">
                <div class="oe_structure"/>
                <div class="row">
                    <div class="col-xs-4 text-left">
                        <h2><b>OMISTSUMORISYO</b></h2>
                    </div>
                    <div class="col-xs-3  col-xs-offset-5 text-right" style="margin-top:5px;">
                        <b><div t-field="doc.name"/></b>
                        <p>
                            <span t-field="doc.date_order" t-field-options='{"format": "yyyy"}'/>Y
                            <span t-field="doc.date_order" t-field-options='{"format": "MM"}'/>M
                            <span t-field="doc.date_order" t-field-options='{"format": "dd"}'/>D
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-7">
                        <p style="font-size:17px"><span t-field="doc.partner_shipping_id"/>
                        <span t-field="doc.rep_partner_id.name"/>SAMA</p>
                        <div style="border-bottom: 1px solid black;"/>
                        <p><span>KAKINOTORIOMITSUMORIMOUSHIAGEMASU.</span></p>
                        <div class="row">
                           <div class="col-xs-8">
                               <table class="table table-condensed">
                                   <tr style="border-bottom: 1px solid black;">
                                       <td class="col-xs-4">
                                           <span style="vertical-align: middle;">KINGAKU</span>
                                       </td>
                                       <td class="col-xs-7 text-center">
                                           <!--<span t-field="doc.amount_untaxed" style="font-size:25px" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.pricelist_id.currency_id&quot;}"/>-->
                                           <span t-esc="p['subtotal']" t-esc-options='{"widget": "monetary", "display_currency": "doc.currency_id"}' style="font-size:25px"/>
                                       </td>
                                   </tr>
                               </table>
                           </div>
                           <div class="col-xs-4">(UNTAXED)</div>
                        </div>
                        <div class="row">
                            <span style="font-size:17px"><b>KOUJIBUKKENMEI:</b> <span t-field="doc.property_id"/></span>
                            <span t-field="doc.version"/><br/>
                            <b>SHIHARAIJOKEN:</b> <span t-field="doc.partner_id.property_payment_term_id"/><br/>
                            <b>MITSUMORIKIGEN:</b>3MONTH<br/>
                            <b>SEIHINHOSYO:</b>1YEARS
                        </div>
                    </div>
                    <div class="col-xs-5 text-right">
                        <img src="" 
                             name="toki" align="right" border="0" />
                        <div class="row">
                            <div class="col-xs-3"/>
                            <span class="col-xs-5"><b>MITSUMORITANTO:</b></span>
                            <span class="col-xs-4" t-field="doc.user_id"/>
                        </div>
                        <div class="row">
                            <div class="col-xs-8"/>
                            <span class="col-xs-4" t-field="doc.assistant_id"/>
                        </div>
                    </div>
                </div>
            </div>
        </template>

    </data>
</openerp>

