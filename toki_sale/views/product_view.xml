<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <record id="view_order_form_check4" model="ir.ui.view">
            <field name="name">product.template.form.check</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_policy']" position="replace"/>
                <xpath expr="//field[@name='list_price']" position="after">
                    <field name="open_price"/>
                </xpath>
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="maker_id"/>
                </xpath>
                <xpath expr="//field[@name='property_stock_inventory']" position="after">
                    <field name="invoice_policy" widget="radio"/>
                </xpath>
                <xpath expr="//field[@name='seller_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <notebook>
                    <page string="Flag">
                        <group string="Flag">
                            <field name="is_warranty"/>
                            <field name="is_cloud"/>
                            <field name="is_payment"/>
                            <field name="pay_per"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

        <record id="product_template_tree_view2" model="ir.ui.view">
            <field name="name">product.template.product.tree2</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='weight']" position="replace"/>
                <xpath expr="//field[@name='volume']" position="replace"/>
            </field>
        </record>

        <record id="product.product_template_action" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="product.product_template_tree_view"/>
        </record>

<!-- add comment to Notes page -->
        <record id="product_template_form_view2" model="ir.ui.view">
            <field name="name">product.template.form.view2</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='description_sale']" position="after">
                    <separator string="Seihin no Chuuigaki(Shanai-yoh)" colspan="4"/>
                    <field name="comment" colspan="4" nolabel="1"
                     placeholder="Kokoniwa kono seihin no chuuigaki wo kaite kudasai."/>
                </xpath>
           </field>
        </record>

        <!-- for sale.order.line -->
        <record id="product_normal_form_view2" model="ir.ui.view"> 
            <field name="name">product.product.form2</field> 
            <field name="model">product.product</field> 
            <field name="inherit_id" ref="product.product_normal_form_view"/> 
            <field name="arch" type="xml"> 
                <xpath expr="//field[@name='invoice_policy']" position="replace"/>
                <xpath expr="//field[@name='default_code']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='lst_price']" position="after">
                    <field name="open_price"/>
                </xpath>
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="maker_id"/>
                </xpath>
                <xpath expr="//field[@name='property_stock_inventory']" position="after">
                    <field name="invoice_policy" widget="radio"/>
                </xpath>
                <xpath expr="//field[@name='seller_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <notebook>
                    <page string="Flag">
                        <group string="Flag">
                            <field name="is_warranty"/>
                            <field name="is_cloud"/>
                            <field name="is_payment"/>
                            <field name="pay_per"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>


    </data>
</openerp>
