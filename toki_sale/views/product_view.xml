<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <record id="view_order_form_check4" model="ir.ui.view">
            <field name="name">product.template.form.check</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_policy']" position="replace"/>
                <xpath expr="//field[@name='list_price']" position="after">
                    <field name="open_price_type" attrs="{'invisible': [('type', '=', 'service')]}"/>
                    <field name="open_price" widget="monetary" attrs="{'invisible': ['|', '|', ('type', '=', 'service'),('open_price_type', '!=', 'value')]}"/>
                </xpath>
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="maker_id"/>
                </xpath>
                <xpath expr="//field[@name='property_stock_inventory']" position="after">
                    <field name="invoice_policy" widget="radio"/>
                </xpath>
                <xpath expr="//group[@name='description']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='description_sale']" position="replace"/>
                <xpath expr="//group[@name='description']" position="after">
                    <group name="spec_sale">
                        <separator string="Description for Quotations" colspan="4"/>
                        <field name="description_sale" colspan="4" nolabel="1"
                              placeholder="This note will be displayed on the quotations."/> 
                    </group>
                </xpath>
            </field>
        </record>

        <record id="product_template_tree_view2" model="ir.ui.view">
            <field name="name">product.template.product.tree2</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='weight']" position="replace"/>
                <xpath expr="//field[@name='volume']" position="replace"/>
                <xpath expr="//field[@name='name']" position="before">
                    <field name="default_code"/>
                </xpath>
            </field>
        </record>

        <record id="product.product_template_action" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="product.product_template_tree_view"/>
        </record>


        <!-- for sale.order.line -->
        <record id="product_normal_form_view2" model="ir.ui.view"> 
            <field name="name">product.product.form2</field> 
            <field name="model">product.product</field> 
            <field name="inherit_id" ref="product.product_normal_form_view"/> 
            <field name="arch" type="xml"> 
                <xpath expr="//field[@name='invoice_policy']" position="attributes">
                    <attribute name="inbisible">"1"</attribute>
                </xpath>
                <xpath expr="//field[@name='lst_price']" position="after">
                    <field name="open_price_type" attrs="{'invisible': [('type', '=', 'service')]}"/>
                    <field name="open_price" widget="monetary" attrs="{'invisible': ['|', '|', ('type', '=', 'service'),('open_price_type', '!=', 'value')]}"/>
                </xpath>
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="maker_id"/>
                </xpath>
                <xpath expr="//field[@name='property_stock_inventory']" position="after">
                    <field name="invoice_policy" widget="radio"/>
                </xpath>
                <xpath expr="//group[@name='description']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='description_sale']" position="replace"/>
                <xpath expr="//group[@name='description']" position="after">
                    <group name="spec_sale">
                        <separator string="Description for Quotations" colspan="4"/>
                        <field name="description_sale" colspan="4" nolabel="1"
                              placeholder="This note will be displayed on the quotations."/>
                    </group>
                </xpath>
                <notebook>
                    <page string="Flag">
                        <group string="Flag">
                            <field name="is_warranty"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>


    </data>
</openerp>
