<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- President approval view -->
        <record model="ir.ui.view" id="sale_president_view_tree">
            <field name="name">sale.order.tree</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <tree string="President approval pending">
                    <field name="name"/>
                    <field name="property_id"/>
                    <field name="partner_id"/>
                    <field name="order_date"/>
                    <field name="amount_untaxed"/>
                    <field name="check_state"/>
                    <field name="state" invisible="1"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="sale_president_view_action">
            <field name="name">Sale Ringi</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name='view_id' ref='sale_president_view_tree'/>
            <field name="domain">[('check_state', '=', 'manager')]</field>
            <field name="help" type="html"> 
                <p class="oe_view_nocontent_create"> 
                    There is no estimate that currently requires an approval.
                </p><p> 
                    lunch up !!!
                </p> 
            </field> 
        </record>

        <menuitem id="president_button_menu" name="President"
                  groups="toki_sale.group_sale_authorizer_president"/>
        <menuitem id="button_menu_approval" name="President Approval"
                  parent="president_button_menu"/>
        <menuitem id="sale_president"
                action="sale_president_view_action" parent="button_menu_approval"
                sequence="1"/>




    </data>
</openerp>
