<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="toki_report_pricelist_template">
    <t t-call="report.html_container">
            <div class="header">

                <div class="row">
                    <div class="col-xs-5 text-left">
                        <h3><b>
                            <span t-if="o.partner_id">
                                <span t-field="o.partner_id.name"/>SAMA KIKIKAKAKUHYO
                            </span>
                            <span t-if="not o.partner_id">
                                <span t-field="o.pricelist_id"/>
                            </span>
                        </b></h3>
                    </div>
                    <div class="col-xs-3  col-xs-offset-4 text-right" style="font-size:12px;">
                        <span t-esc="datetime.datetime.now().strftime('%YY%mM%dD')"/>
                        <p>TOYO-KIKI</p>
                    </div>
                </div>
            </div>
            <div class="page">
                <table class="table table-condensed" style="font-size:12px;">
                    <thead>
                        <tr style="background-color: #e0e0e0; ">
                            <th/>
                            <th>SEIHINMEI</th>
                            <th>KATABAN</th>
                            <th/>
                            <th t-if="o.show_standard_price">SHIIRENE</th>
                            <th>OPEN PRICE</th>
                            <th t-if="o.pricelist_id">KAKAKU</th>
                            <th>BIKOU</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-if="not o.show_variants">
                            <t t-set="products" t-value="o.product_tmpl_ids"/>
                        </t>
                        <t t-if="o.show_variants">
                            <t t-set="products" t-value="o.product_ids or o.product_tmpl_ids.mapped('product_variant_ids')"/>
                        </t>
                        <t t-foreach="(o.categ_ids or products.mapped('categ_id') or o.categ_ids.search([])).sorted(key=lambda x:x.name)" t-as="category">
                            <t t-set="category_products" t-value="products and products.with_context(categ_id=category.id).filtered(lambda x: x.categ_id.id == x.env.context['categ_id']) or products.search([('sale_ok','=',True), ('categ_id','=',category.id)])"/>
                            <tr t-if="category_products">
                                <td colspan="100">
                                    <strong t-field="category.name"/>
                                </td>
                            </tr>
                            <!-- product list line -->
                            <tr t-foreach="category_products" t-as="product">
                                <td style="width: 0.5in;">
                                    <span t-field="product.image_small"
                                              t-field-options="{&quot;widget&quot;: &quot;image&quot;, &quot;class&quot;: &quot;img-rounded&quot;}"/>
                                </td>
                                <td><span t-field="product.description_sale"/></td>
                                <td>
                                    <span t-if="o.show_default_code">
                                        <span t-field="product.default_code"/>
                                    </span>
                                    <span t-if="not o.show_default_code">
                                        <span t-field="product.name"/>
                                    </span>
                                </td>
                                <td style="max-width: 5in;">SPEC</td>
                                <td t-if="o.show_standard_price">
                                    <span t-field="product.standard_price"/>
                                </td>
                                <td><span t-field="product.open_price"/></td>
                                <td t-if="o.pricelist_id">
                                    <strong t-field="product.with_context(pricelist=o.pricelist_id.id).price"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
    </t>
</template>

<template id="report_pricelist_toki">
    <t t-foreach="docs" t-as="o">
        <t t-call="toki_report_pricelist.toki_report_pricelist_template" t-lang="o.env.user.lang"/>
    </t>
</template>

<report
    id="action_report_product_pricelist"
    model="product.pricelist.print"
    string="Pricelist/TOKI"
    report_type="qweb-pdf"
    name="toki_report_pricelist.report_pricelist_toki"
    file="toki_report_pricelist.report_pricelist_toki"
    paperformat="toki_report_pricelist.paperformat_pricelist"
/>

</odoo>
