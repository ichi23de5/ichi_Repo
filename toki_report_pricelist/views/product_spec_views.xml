<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_product_template_pricelist_form" model="ir.ui.view">
            <field name="name">product.template.pricelist.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='description_sale']" position="after">
                    <separator string="Description for pricelist" colspan="4"/>
                    <field name="spec_note"/>
                    <field name="spec_remarks"/>
                </xpath>
            </field>
        </record>
        <record id="view_product_product_pricelist_form" model="ir.ui.view">
            <field name="name">product.product.pricelist.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='description_sale']" position="after">
                    <separator string="Description for pricelist" colspan="4"/>
                    <field name="spec_note"/>
                    <field name="spec_remarks"/>
                </xpath>
            </field>
        </record>


    </data>
</openerp>

