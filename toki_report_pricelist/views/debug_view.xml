<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- debug view : product.pricelist.item.tree -->
        <record id="product_pricelist_form_view_add" model="ir.ui.view">
            <field name="name">product.pricelist.form.check</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='item_ids']/tree//field[@name='name']" position="attributes">
                    <attribute name="inbisible">"1"</attribute>
                </xpath>
                <xpath expr="//field[@name='item_ids']/tree//field[@name='date_start']" position="attributes">
                    <attribute name="inbisible">"1"</attribute>
                </xpath>
                <xpath expr="//field[@name='item_ids']/tree//field[@name='date_end']" position="attributes">
                    <attribute name="inbisible">"1"</attribute>
                </xpath>
                <xpath expr="//field[@name='item_ids']/tree//field[@name='min_quantity']" position="before">
                    <field name="categ_id"/>
                </xpath>
            </field>
        </record>

        <!-- debug menu : product.pricelist.item -->
        <record model="ir.actions.act_window" id="product_pricelist_item_view_action">
            <field name="name">Pricelist Item</field>
            <field name="res_model">product.pricelist.item</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name='view_id' ref='product.product_pricelist_item_tree_view'/>
        </record>
        <menuitem id="product_pricelist_item"
                action="product_pricelist_item_view_action" parent="product.menu_product_pricelist_main"
                groups="product.group_sale_pricelist" sequence="2"/>

    </data>
</openerp>

