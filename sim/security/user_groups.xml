<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_management">
            <field name="name">SIM</field>
            <field name="description">User access level for this module</field>
            <field name="sequence">6</field>
        </record>

        <record id="group_user" model="res.groups">
            <field name="name">User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="category_id" ref="sim.module_management"/>
        </record>

        <record id="group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids" eval="[(4, ref('sim.group_user'))]"/>
            <field name="category_id" ref="sim.module_management"/>
        </record>

        <record id="group_upper" model="res.groups">
            <field name="name">Upper</field>
            <field name="implied_ids" eval="[(4, ref('sim.group_manager'))]"/>
            <field name="category_id" ref="sim.module_management"/>
        </record>

    </data>
</odoo>
