<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <!-- base structure of work selection form view -->
        <record model="ir.ui.view" id="work_view_form">
            <field name="name">work.view.form</field>
            <field name="model">work.selection</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Work Type">
                    <sheet>
                        <group>
                            <group>
                                <field name="work"/>
                            </group>
                            <group>
                                <field name="new"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>
