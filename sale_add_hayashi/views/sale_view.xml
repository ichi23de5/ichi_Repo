<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
	<record id="view_order_form_check3" model="ir.ui.view">
	    <field name="name">sale.order.form.check</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <header>  
                    <group>
                        <button string="Flag A" type="object" name="flag_a"/>
                    </group>
                </header>
                <data>
                    <field name="project_id" position="replace"/>
                </data>
                <xpath expr="//field[@name='name']" position="after">
                    <label class="oe_edit_only" string="Property Name"/>
                    <h2><field name="property_id"/></h2>
                </xpath>
                <xpath expr="//field[@name='name']" position="replace">
                </xpath>
                <xpath expr="//field[@name='user_id']" position="replace">
                </xpath>
                <xpath expr="//field[@name='validity_date']" position="attributes">
                    <attribute name="placeholder">auto</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="plan_id"/>
                    <field name="work_type"/>
                    <field name="user_id" widget="selection"/>
                    <field name="assistant" widget="selection"/>
                    <field name="inspection_id"/>
                </xpath>
                <xpath expr="//field[@name='validity_date']" position="before">
                    <field name="create_date" readonly='0'/>
                </xpath>

                <!-- sale order line -->
                <xpath expr="//field[@name='order_line']/tree//field[@name='tax_id']" position="attributes"> 
                    <attribute name="invisible">1</attribute> 
                </xpath>
<!--
                <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="before">
                    <field name="open_price"/>
                </xpath>
-->
<!-- 
                <xpath expr="//field[@name='order_line']/tree/field[@name='amount_total']" position="attributes">
                    <attribute name="degits">dp.get_precision('Product Unit of Measure')</attribute>
                </xpath>
-->


                <notebook>
                    <page string="Contract">
                        <group>
                            <field name="tkcloud_id"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</openerp> 
