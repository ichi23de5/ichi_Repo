<?xml version="1.0"?>
<data inherit_id="sale.report_saleorder_document">
            <xpath expr="//table/tbody[@class='sale_tbody']" position="replace">
                <t t-foreach="doc.sale_layout_lines(order_id = doc.id)" t-as="p">
                    <!-- Name of the category -->
                    <t t-call="sale_layout.category_template"/>

                    <!-- Lines associated -->
                    <t t-foreach="p['lines']" t-as="l">
                        <tr t-if="l.product_uom_qty">
                            <td>
                               <span t-field="l.product_id.description_sale"/> 
                               <t t-if="l.product_id.default_code">(<span t-field="l.product_id.default_code"/>)</t>
                            </td>
                            <td class="text-right">
                                <span t-field="l.product_uom_qty"/>
                                <span groups="product.group_uom" t-field="l.product_uom"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.open_price"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.price_unit"/>
                            </td>
                            <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                <span t-field="l.discount"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.price_subtotal" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;doc.pricelist_id.currency_id&quot;}"/>
                            </td>
                        </tr>
                    </t>

                    <!-- Subtotal -->
                    <t t-call="sale_layout.subtotal_template"/>


                </t>
            </xpath>
       </data>
    
